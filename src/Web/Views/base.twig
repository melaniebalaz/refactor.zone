{% import "meta.twig" as meta %}
<!DOCTYPE html>
<html lang="en">
<head prefix="og: http://ogp.me/ns#">
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta name="HandheldFriendly" content="true" />
	<meta name="theme-color" content="#63bc46" />

	<title>{% if pagetitle %}{{ pagetitle }} &mdash; {% endif %}Refactor Zone</title>
	<link href="/css/site.min.css" rel="stylesheet" />

	<meta property="og:locale" content="en_US" />
	<meta property="og:site_name" content="Refactor Zone" />
	<meta property="og:title" content="{{ pagetitle }}"/>
	<meta property="fb:admins" content="janoszen" />
	<meta property="fb:app_id" content="1780998928787657" />
	<meta property="fb:pages" content="307680759577091" />
{% block meta %}
	<meta property="og:type" content="website" />
	<meta property="og:image" content="https://refactor.zone/images/social.png" />
	<link rel="apple-touch-icon-precomposed" href="https://refactor.zone/images/social.png" />
{% endblock %}
	<meta name="twitter:site" content="@refactorzone" />
	<meta name="twitter:title" content="{{ pagetitle }}" />

	<link rel="icon" href="/images/social.png" type="image/x-icon" />
	<link rel="shortcut icon" href="/images/social.png" type="image/x-icon"/>

	<link rel="alternate" type="application/rss+xml" href="/feed" />

	<!--[if lt IE 9]>
		<script src="/js/html5shiv.min.js"></script>
		<script src="/js/respond.min.js"></script>
	<![endif]-->
</head>
<body class="light">
	<header>
		<nav class="navbar navbar-secondary navbar-static-top">
			<div class="container">
				<ul class="nav navbar-nav">
					<li>
						<a href="/terms">Terms</a>
					</li>
					<li>
						<a href="/privacy">Privacy policy</a>
					</li>
					<li>
						<a href="/imprint">Imprint</a>
					</li>
					<li>
						<a href="/contact">Contact</a>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a href="#">Things we <i class="fa fa-heart text-red" aria-label="love"></i></a>
					</li>
					<li>
						<a href="/feed">
							<i class="fa fa-lg fa-rss-square text-rss" aria-label="RSS"></i>
						</a>
					</li>
					<li>
						<a href="https://www.facebook.com/refactorzone/">
							<i class="fa fa-lg fa-facebook-square text-facebook" aria-label="Facebook"></i>
						</a>
					</li>
					<li>
						<a href="https://twitter.com/refactorzone/">
							<i class="fa fa-lg fa-twitter-square text-twitter" aria-label="Twitter"></i>
						</a>
					</li>
				</ul>
			</div>
		</nav>
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">
						<img
								src="/images/refactor-zone-logo.png"
								srcset="/images/refactor-zone-logo-2x.png 2x"
								alt="Refactor Zone"
								height="60"
								width="216"
						/>
					</a>
				</div>
				<div id="navbar" class="navbar-right navbar-collapse collapse">
					<ul class="nav navbar-nav">
						{% for category in categories %}
							<li><a href="/category/{{ category.slug }}">{{ category.name }}</a></li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<ol itemscope="itemscope" itemtype="https://schema.org/BreadcrumbList" class="breadcrumb">
		<li itemprop="itemListElement" itemscope="itemscope"
			itemtype="https://schema.org/ListItem">
			<a itemprop="item" href="https://refactor.zone">
				<span itemprop="name">Refactor Zone</span></a>
			<meta itemprop="position" content="1" />
		</li>
		{% block breadcrumbs %}{% endblock %}
	</ol>
{% block body %}
	<div class="container main">
		<main role="main">
			{% block content %}
			{% endblock %}
		</main>
	</div>
{% endblock %}
	<footer class="main">
		<div class="container">
			<div class="row">
				<div class="col-md-4" itemscope="itemscope" itemtype="https://schema.org/Organization">
					<meta itemprop="name" content="Opsbears">
					<meta itemprop="isicV4" content="6311">

					<meta itemprop="logo" content="https://www.opsbears.com/v1420052371/img/logo.png">
					<h2>Made with <i class="fa fa-heart text-red"></i> by</h2>
					<p>
						<i class="fa fa-fw fa-building"></i>
						<span itemprop="legalName">Opsbears e.U.</span>
					</p>
					<div itemprop="address" itemscope="itemscope" itemtype="https://schema.org/PostalAddress">
						<p>
							<i class="fa fa-fw fa-map-marker"></i> <span itemprop="streetAddress">Graf-Starhemberg-Gasse 47/6</span>
						</p>
						<p>
							<i class="fa fa-fw"></i>
							<span itemprop="postalCode">1040</span> <span itemprop="addressLocality">Vienna</span>,
							<span itemprop="addressCountry" content="AT">Austria</span>
						</p>
					</div>
					<p>
						<i class="fa fa-fw fa-phone"></i>
						Phone: <a href="tel:+4313535553" content="+4313535553" itemprop="telephone">+43 1 353 5553</a>
					</p>
					<p>
						<i class="fa fa-fw fa-envelope"></i>
						Email: <a href="mailto:ops&#64;opsbears.com" itemprop="email">ops&#64;opsbears.com</a>
					</p>
					<p>
						<i class="fa fa-fw fa-globe"></i>
						Web: <span itemprop="url" content="https://www.opsbears.com/">www.opsbears.com</span>
					</p>
				</div>
				<div class="col-md-4">

				</div>
				<div class="col-md-4">
					<h2>About this site</h2>
					<ul>
						<li>
							<a href="/terms">Terms</a>
						</li>
						<li>
							<a href="/privacy">Privacy policy</a>
						</li>
						<li>
							<a href="/imprint">Imprint</a>
						</li>
						<li>
							<a href="/contact">Contact</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</footer>
	<footer class="copyright">
		<div class="container">
			<div class="col-sm-2 hidden-xs"></div>
			<div class="col-sm-8 text-center">
				<p>
					Hey, if you want to copy this,
					<a href="/contact">why not ask first</a>?
				</p>
			</div>
			<div class="col-sm-2 text-right hidden-xs">
				<a href="#" class="btn btn-default">
					<i class="fa fa-chevron-up"></i>
					<span class="sr-only">Back to the top</span>
				</a>
			</div>
		</div>
	</footer>
	<script src="/js/site.min.js"></script>
</body>
</html>
