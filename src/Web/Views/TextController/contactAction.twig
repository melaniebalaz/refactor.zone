{% extends "base.twig" %}

{% set pagetitle = 'Privacy policy' %}

{% block breadcrumbs %}
	<li itemprop="itemListElement" itemscope="itemscope"
		itemtype="https://schema.org/ListItem">
		<a itemprop="item" href="https://refactor.zone/terms">
			<span itemprop="name">Privacy policy</span></a>
		<meta itemprop="position" content="2" />
	</li>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-xl-6 col-lg-10 col-md-10 col-sm-12 col-xs-12 col-lg-push-1 col-md-push-1">
			<article>
				<div class="card article">
					<header>
						<h1><span itemprop="headline">
								Contact
							</span></h1>
					</header>

					<div class="articleBody">
						<p class="text-center">
							We <i class="fa fa-heart text-red"></i><span class="sr-only">love</span> feedback! Let us
							know what you think  at
							<a href="mailto:feedback&#64;refactor.zone">feedback&#64;refactor.zone</a>.
						</p>
					</div>
				</div>
			</article>
		</div>
	</div>
{% endblock %}